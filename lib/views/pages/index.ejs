    <% tengri.map(watch=>{ %>

        <div class="modal fade" id='exampleModal<%= watch.id %>' data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Request Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <ul>
                                        <li>host : <%= watch.host %></li>
                                        <li>method : <%= watch.method %></li>
                                        <li>status : <%= watch.status %></li>
                                        <li>status Message : <%= watch.statusMessage %></li>
                                        <li>url : <%= watch.route %></li>
                                        <li>time spent : <%= watch.duration %> ms</li>
                                    </ul>
                                </div>
    
                                <div class="col-12">
